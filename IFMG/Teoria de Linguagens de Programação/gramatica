classDefinition -> class <class-name> <base-class-name> { <member-definition-list> }
<base-class-name> -> : <baseName> | Î»
<member-definition-list> -> <member-definition> <member-definition-list> | <member-definition>


memberDefinition -> <variable-name-list> ; static <variable-name-list> ; <function-name> ( <formal-argument-list> ) ; static <function-name> ( <formal-argument-list> ) ;
<variable-name-list> -> <variable-name> <variable-name-list> | <variable-name>
<formal-argument-list> -> <formal-argument> <formal-argument-list> | <formal-argument>


functionDefinition -> [ <class-name> :: ] <function-name> ( [ <formal-argument-list> [ ; <temporary-list> ] ) { <statement>... }